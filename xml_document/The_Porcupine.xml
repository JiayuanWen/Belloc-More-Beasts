<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="beasts_schema.rnc" type="application/relax-ng-compact-syntax"?>

<!-- XPath command to merge later: //root/* -->

<root>
    <pg ref="porcupine">
        <title>The Porcupine</title>
        <fig>
            <img alt="Porcupine"
                src="https://github.com/JiayuanWen/Belloc-More-Beasts/blob/main/pics/porcupine.png"
            />
        </fig>
        <lg>
            <l n="1">What! would you <act>slap</act> the <beast>Porcupine?</beast></l>
            <l n="2"><desc con="neg">Unhappy </desc><person role="reader" count="single"
                    >child</person><act>—desist!</act></l>
            <l n="3">Alas! that <person role="character" count="single">any friend of
                mine</person></l>
            <l n="4">Should <act>turn</act><desc> Tupto-philist.</desc><noteref letter="B"
                    >[B]</noteref></l>
        </lg>
        <pgNum n="218">[218]</pgNum>
    </pg>
    <pg ref="porcupine">
        <fig>
            <img alt="To strike the creature"
                src="https://github.com/JiayuanWen/Belloc-More-Beasts/blob/main/pics/porcupine2.png"
            />
        </fig>
        <lg>
            <l n="1">To <act>strike</act> the <desc con="neg">meanest and the least</desc></l>
            <l n="2">Of <beast>creatures</beast><desc con="neg"> is a <act con="neg"
                    >sin,</act></desc></l>
        </lg>
        <pgNum n="219">[219]</pgNum>
    </pg>
    <pg ref="porcupine">
        <fig>
            <img alt="With prickes on its skin"
                src="https://github.com/JiayuanWen/Belloc-More-Beasts/blob/main/pics/porcupine3.png"
            />
        </fig>
        <lg>
            <l n="1">How much more <desc con="neg">bad</desc> to <act con="neg">beat</act> a
                    <beast>beast</beast></l>
            <l n="2"><desc>With prickles on its skin.</desc></l>
        </lg>
        <pgNum n="220">[220]</pgNum>
        <foot> FOOTNOTE: <def><noteref letter="B">[B]</noteref> From τυπτω=I strike; φιλεω=I love;
                one that loves to strike. The word is not found in classical Greek, nor does it
                occur among the writers of the Renaissance—nor anywhere else.</def>
        </foot>
    </pg>
</root>
